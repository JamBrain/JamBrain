#!/usr/bin/env php
<?php
const CONFIG_PATH = "../../";
const BACKEND_PATH = "../../src/";

include_once __DIR__."/".CONFIG_PATH."config.php";
require_once __DIR__."/".BACKEND_PATH."core/cli.php";		// Confirm CLI
require_once __DIR__."/".BACKEND_PATH."core/db.php";
require_once __DIR__."/".BACKEND_PATH."global/global.php";

_db_Connect();

if ( _db_IsConnected() ) {
	global_Load();

	// MK: I'm allowing this use of $SH because there's no reason to make a one-off function
	if ( isset($SH) ) {
		ksort($SH);
		echo json_encode($SH, JSON_PRETTY_PRINT)."\n";
		exit(0);
	}
}

exit(1);
