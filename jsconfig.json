{
	"compilerOptions": {
		"checkJs": true,
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"strict": false,
		"allowSyntheticDefaultImports": true,
		"types": ["preact"],
		"baseUrl": "./src/",
		"paths": {
			"classnames": ["external/classnames/index"],
			"shallow": ["custom/shallow/shallow"]
		}
	},
	"include": ["src/**/*"],
	"excludeDirectories": ["node_modules", "**/node_modules/*", "**/.*", "config/**/*", "sandbox/**/*"]
}
