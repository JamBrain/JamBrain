{
	"note": "Hey! These are things we want to eventually do in eslint.",

	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true		// until rest-spread support is better, leave this disabled
		}
	},
	"rules": {
		"indent": ["error", "tab"],
		
		"no-unused-vars": "error",

		"no-empty-character-class": "error",			// prevents certain regex mistakes
		no-invalid-regexp: "error"						// prevents other regex errors
		no-regex-spaces: "error"						// ja
		
		wrap-regex: "error"
		
		no-sparse-arrays: "error"						// stop stray commas ['red',,'blue'] in arrays. doesn't affect trailing comma
		
		valid-jsdoc: "error"							// require proper /** JS DOC **/ syntax
		
		
		"space-before-function-paren": ["warn", "never", {"asyncArrow": "always"}],
		
		
		nonblock-statement-body-position: ["error", "beside"]
		
		quotes: ["error", "single", { "allowTemplateLiterals": true }]		// somehow disable backticks
		
		space-in-parens: ["error", "never"]									// TODO: enable only for if/for etc
	}
}
