{
	"compilerOptions": {
		"checkJs": true,
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"strict": false,
		"allowSyntheticDefaultImports": true,
		"types": ["preact"],
		"baseUrl": "./src/",
		"paths": {
			"classnames": ["external/classnames/index"],
			"shallow-compare": ["external/shallow-compare/index"],
			"shallow": ["custom/shallow/shallow"]
		}
	},
	"include": ["src/**/*"],
	"excludeDirectories": ["node_modules", "**/node_modules/*", "**/.*", "src/config/*"]
}
