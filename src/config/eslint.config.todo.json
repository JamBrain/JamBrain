{
	"note": "Hey! These are things we want to eventually do in eslint.",

	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"semi": ["error", "always"],
		"eol-last": ["error", "always"],
		"indent": ["error", "tab"],
		"no-mixed-spaces-and-tabs": "error",
		"no-trailing-spaces": "error",
		"no-multi-spaces": "error",
		"no-unused-vars": "error"
	}
}
